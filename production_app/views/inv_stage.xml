<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- this is the main view for invoice application-->
<record id="new_inv_view" model="ir.actions.act_window">
    <field name="name">Invoiced Records</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">account.move</field>
    <field name="view_mode">form,tree,kanban</field>
    <field name="context">{'default_state':'invc'}</field>
    <field name="domain">[('inv_state','=','invc')]</field>
    <field name="help" type="html">
    	<p class="o_view_nocontent_smiling_face">
    	Create A Invoiced Record!
    	</p>
    </field>
</record>

<menuitem id="new_ivn_views"
        name="Invoiced"
        parent="account.menu_finance"
        action="new_inv_view"
        sequence="-50"/>

    <!-- this is the main view for invoice application-->
<record id="new_non_inv_view" model="ir.actions.act_window">
    <field name="name">Not Invoiced Records</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">account.move</field>
    <field name="view_mode">form,tree,kanban</field>
    <field name="context">{'default_state':'not_invc'}</field>
    <field name="domain">[('inv_state','=','not_invc')]</field>
    <field name="help" type="html">
    	<p class="o_view_nocontent_smiling_face">
    	Create A NoN Invoiced Record!
    	</p>
    </field>
</record>

<menuitem id="new_non_ivn_views"
        name="Not Invoiced"
        parent="account.menu_finance"
        action="new_non_inv_view"
        sequence="-60"/>
</odoo>
