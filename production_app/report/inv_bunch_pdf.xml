<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <template id="bunch_report_pdf">
            <t t-call="web.html_container">
				 <t t-call="web.external_layout">
                       <t t-set="address">
                           <br/>
                           <br/>
                           <br/>
                          <h6>Valutakode på konto: &#160; &#160;NOK</h6>
                        <h6>Valutakode for bunten: &#160; &#160;89898</h6>
                        <h6>Registrert av: &#160; &#160;Per Magne Mork</h6>
                        <h6>Kundenr hos factoringselskap:&#160; &#160;09891</h6>
                        <h6>Debitor FCI: &#160; &#160;530</h6>
                        </t>
                     <t t-set="information_block">
                                                        <div style="margin-top:-100%">
                                                             <h5>Factoringbunt DNB Factoring</h5>

                                                        </div>

                                <br/>

                               <h6>Bunt nr: &#160; &#160;<t t-esc="docs.count_banch()"/></h6>
                               <h6>Buntdato: &#160; &#160; <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%dT%H:%M:%S')"/></h6>
                               <h6>Bunttype: &#160; &#160;1</h6>
                               <h6>Beløp: &#160; &#160; 145 793,70</h6>
                               <h6>Antall bilag: &#160; &#160; 2</h6>
                               <h6>Sendt: &#160; &#160; YES</h6>
                     </t>
                     <br/>
                     <table class="table table-striped">
                            <thead>
                            <tr>
                                <th name="art_no" class="text-left"><span>Kundenr</span></th>
                                <th name="th_description" class="text-left"><span>Navn</span></th>
                                <th name="th_quantity" class="text-left">Fakturanr</th>
                                <th name="th_priceunit" class="text-left">Fakturadato</th>
                                <th name="th_price_unit" class="text-left"><span>Forfallsdato</span></th>
                                <th name="th_price_unit" class="text-right"><span>Beløp</span></th>
                            </tr>
                            </thead>
                        <t t-foreach="docs" t-as="o">
                            <tbody>
                                         <td name="account_invoice_line_id"><span t-field="o.partner_id.id" t-options="{'widget': 'text'}"/></td>
                                        <td name="account_invoice_line_name"><span t-field="o.partner_id.name" t-options="{'widget': 'text'}"/></td>
                                        <td name="account_invoice_line"><span t-field="o.id" t-options="{'widget': 'text'}"/></td>
                                        <td name="account_invoic_line"><t t-esc="o.invoice_date.strftime('%Y-%m-%d')"/></td>
                                        <td name="account_invoicline"><t t-esc="o.invoice_date_due.strftime('%Y-%m-%d')"/></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total_signed"/>
                                        </td>
                            </tbody>
                         </t>

                     </table>
                 </t>
            </t>
        </template>
    </data>
</odoo>
