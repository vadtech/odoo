<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="bunch_report_pdf">
                <t t-call="web.html_container">
                  <div t-attf-class="header o_company_#{user.company_id}_layout" t-att-style="report_header_style">
                      <div class="o_boxed_header">
                                <div class="row mb8">
                                    <div class="col-6">
                                        <img t-if="user.company_id.logo" t-att-src="image_data_uri(user.company_id.logo)" alt="Logo"/>
                                    </div>
                                    <div class="col-6 text-right mb4">
                                        <h4 class="mt0" t-field="user.company_id.report_header"/>
                                        <div name="company_address" class="float-right mb4">
                                            <h5>
                                                Factoringbunt
                                            </h5>
                                            <h5>
                                                DNB Factoring
                                            </h5>

                                        </div>
                                    </div>
                                </div>
                                </div>
                      <div>
                          <div class="row mb8">
                        <t t-set="address">
                                    <h6>Valutakode på konto: &#160; &#160;NOK</h6>
                                    <h6>Valutakode for bunten: &#160; &#160;89898</h6>
                                    <h6>Registrert av: &#160; &#160;Per Magne Mork</h6>
                                    <h6>Kundenr hos factoringselskap:&#160; &#160;09891</h6>
                                    <h6>Debitor FCI: &#160; &#160;530</h6>
                                </t>
                  <t t-set="information_block">
                               <h6>Bunt nr: &#160; &#160;<t t-esc="docs.count_banch()"/></h6>
                               <h6>Buntdato: &#160; &#160; <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%dT%H:%M:%S')"/></h6>
                               <h6>Bunttype: &#160; &#160;1</h6>
                               <h6>Beløp: &#160; &#160; 145 793,70</h6>
                               <h6>Antall bilag: &#160; &#160; 2</h6>
                               <h6>Sendt: &#160; &#160; YES</h6>
                            </t>
                          </div>

                     </div>
                            </div>
                               <div t-attf-class="article o_report_layout_boxed o_company_#{user.company_id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                                <div class="pt-5">
                                    <!-- This div ensures that the address is not cropped by the header. -->
                                    <t t-call="web.address_layout"/>
                                </div>
                                <t t-raw="0"/>
                                                             <div class="row mb8" style="margin-top:-220px">
                      <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                               <th name="art_no" class="text-left"><span>Kundenr</span></th>
                                <th name="th_description" class="text-left"><span>Navn</span></th>
                                <th name="th_quantity" class="text-left">Fakturanr</th>
                                <th name="th_priceunit" class="text-left">Fakturadato</th>
                                <th name="th_price_unit" class="text-left"><span>Forfallsdato</span></th>
                                <th name="th_price_unit" class="text-right"><span>Beløp</span></th>
                            </tr>
                        </thead>
                        <t t-foreach="docs" t-as="o">
                        <tbody class="invoice_tbody">
                                        <td name="account_invoice_line_id"><span t-field="o.partner_id.id" t-options="{'widget': 'text'}"/></td>
                                        <td name="account_invoice_line_name"><span t-field="o.partner_id.name" t-options="{'widget': 'text'}"/></td>
                                        <td name="account_invoice_line"><span t-field="o.id" t-options="{'widget': 'text'}"/></td>
                                        <td name="account_invoic_line"><t t-esc="o.invoice_date.strftime('%Y-%m-%d')"/></td>
                                        <td name="account_invoicline"><t t-esc="o.invoice_date_due.strftime('%Y-%m-%d')"/></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total_signed"/>
                                        </td>
                        </tbody>
                        </t>
                    </table>
                          </div>
                            </div>

                            <div t-attf-class="footer o_boxed_footer o_company_#{user.company_id}_layout">
                                <div class="text-center">
                                    <ul class="list-inline">
                                        <li t-if="user.company_id.phone" class="list-inline-item"><span class="o_force_ltr" t-field="user.company_id.phone"/></li>
                                        <li t-if="user.company_id.email" class="list-inline-item"><span t-field="user.company_id.email"/></li>
                                        <li t-if="user.company_id.website" class="list-inline-item"><span t-field="user.company_id.website"/></li>
                                        <li t-if="user.company_id.vat" class="list-inline-item"><t t-esc="user.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="user.company_id.vat"/></li>
                                    </ul>
                                    <div t-field="user.company_id.report_footer"/>
                                    <div t-if="report_type == 'pdf'">
                                        Page: <span class="page"/> / <span class="topage"/>
                                    </div>
                                </div>
                            </div>
                        </t>
        </template>
    </data>
</odoo>
